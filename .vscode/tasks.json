{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Release)",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "zig build -Ddebug",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build GDB (Release)",
            "type": "shell",
            "command": "zig build -Dgdb",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build GDB (Debug)",
            "type": "shell",
            "command": "zig build -Dgdb -Ddebug",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Format current file",
            "type": "shell",
            "command": "zig fmt ${file}",
            "problemMatcher": []
        },
        {
            "label": "gdbDebugRun",
            "type": "shell",
            "dependsOn": ["Build GDB (Debug)"],
            "windows": {
                "command": "C:\\mGBA\\mGBA.exe -g zig-out/bin/${fileBasenameNoExtension};sleep 0;echo debuggerReady"
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "shared",
            },
            "command": "debuggerReady",
            "problemMatcher": []
        },
        {
            "label": "gdbReleaseRun",
            "type": "shell",
            "dependsOn": ["Build GDB (Release)"],
            "windows": {
                "command": "C:\\mGBA\\mGBA.exe -g zig-out/bin/${fileBasenameNoExtension};sleep 0;echo debuggerReady"
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "shared"
            },
            "command": "debuggerReady",
            "problemMatcher": []
        },
        {
            "label": "debugRun",
            "type": "shell",
            "dependsOn": ["Build (Debug)"],
            "windows": {
                "command": "C:\\mGBA\\mGBA.exe zig-out/bin/${fileBasenameNoExtension}.gba"
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "shared",
            },
            "command": "debuggerReady",
            "problemMatcher": []
        },
        {
            "label": "releaseRun",
            "type": "shell",
            "dependsOn": ["Build (Release)"],
            "windows": {
                "command": "C:\\mGBA\\mGBA.exe zig-out/bin/${fileBasenameNoExtension}.gba;sleep 0;echo debuggerReady"
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "shared"
            },
            "command": "debuggerReady",
            "problemMatcher": []
        },
        {
            "label": "kill-emulator",
            "type": "shell",
            "command": "taskkill /im mGBA.exe /F"
         }
    ]
}